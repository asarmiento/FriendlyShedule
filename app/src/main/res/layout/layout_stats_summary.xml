<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="2"
            android:rowCount="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Total de citas"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvTotalAppointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="25"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="8dp"
                android:text="Tasa de asistencia"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvAttendanceRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/success"
                tools:text="80%"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="8dp"
                android:text="Tasa de ausencia"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvAbsentRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/error"
                tools:text="20%"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="8dp"
                android:text="Hora mÃ¡s frecuente"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvMostFrequentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="09:30"/>

        </GridLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 